#@  [2D, 1 AMR Levels]
#@  cmd = mpirun -np 2 ./bin/alamo-2d-g++ tests/UniaxialTension/input amr.max_level=0 
#@
#@  [2D, 2 AMR Levels]
#@  cmd = mpirun -np 4 ./bin/alamo-2d-g++ tests/UniaxialTension/input amr.max_level=1
#@
#@  [2D, 3 AMR Levels]
#@  cmd = mpirun -np 8 ./bin/alamo-2d-g++ tests/UniaxialTension/input amr.max_level=2
#@
#@  [3D, 3 AMR Levels]
#@  cmd = mpirun -np 8 ./bin/alamo-2d-g++ tests/UniaxialTension/input amr.max_level=2

alamo.program                 = mechanics
alamo.program.mechanics.model = linear.isotropic
plot_file		      = tests/UniaxialTension/output

# this is not a time integration, so do
# exactly one timestep and then quit
timestep		      = 0.1
stop_time		      = 0.1

# amr parameters
amr.plot_int		      = 1
amr.max_level		      = 2
amr.n_cell		      = 32 32 32
amr.blocking_factor	      = 4
amr.regrid_int		      = 1
amr.grid_eff		      = 1.0
amr.cell.all                  = 1

# use an explicit mesh (i.e. no adaptive meshing)
explicitmesh.on               = 1
explicitmesh.lo1              = 16 16 16
explicitmesh.hi1              = 47 47 47
explicitmesh.lo2              = 48 48 48
explicitmesh.hi2              = 79 79 79

# geometry
geometry.prob_lo	      = -8 -8 -8 
geometry.prob_hi	      = 8 8 8
geometry.is_periodic	      = 0 0 0

# elastic moduli
elastic.model1.planestress = true
elastic.model1.E = 210 
elastic.model1.nu = 0.3

elastic.solver.verbose = 3
elastic.solver.nriters = 1
elastic.solver.max_iter = 50

### UNIAXIAL TENSION ###
elastic.bc.type = constant

### --- Faces
elastic.bc.type.xlo = disp trac trac
elastic.bc.type.xhi = disp trac trac
elastic.bc.val.xhi = 0.1 0.0 0.0
elastic.bc.type.ylo = trac disp trac
elastic.bc.type.yhi = trac trac trac
elastic.bc.type.zlo = trac trac disp
elastic.bc.type.zhi = trac trac trac

### --- Edges
###     XY edges
elastic.bc.type.xloylo = disp trac trac
elastic.bc.type.xloyhi = disp trac trac
elastic.bc.type.xhiylo = disp trac trac
elastic.bc.type.xhiyhi = disp trac trac
elastic.bc.val.xhiylo = 0.1 0.0 0.0
elastic.bc.val.xhiyhi = 0.1 0.0 0.0
###     ZX edges
elastic.bc.type.zloxlo = disp trac trac
elastic.bc.type.zhixlo = disp trac trac
elastic.bc.type.zloxhi = disp trac trac
elastic.bc.type.zhixhi = disp trac trac
elastic.bc.val.zloxhi = 0.1 0.0 0.0
elastic.bc.val.zhixhi = 0.1 0.0 0.0
###     YZ edges
elastic.bc.type.ylozlo = trac disp disp
elastic.bc.type.ylozhi = trac disp trac
elastic.bc.type.yhizlo = trac trac disp
elastic.bc.type.yhizhi = trac trac trac


### --- Corners
###     on xmin face
elastic.bc.type.xloylozlo = disp disp disp
elastic.bc.type.xloylozhi = disp disp trac
elastic.bc.type.xloyhizlo = disp trac disp
elastic.bc.type.xloyhizhi = disp trac trac
###     on xmax face
elastic.bc.type.xhiylozlo = disp disp disp
elastic.bc.val.xhiylozlo = 0.1 0.0 0.0
elastic.bc.type.xhiylozhi = disp disp trac
elastic.bc.val.xhiylozhi = 0.1 0.0 0.0
elastic.bc.type.xhiyhizlo = disp trac disp
elastic.bc.val.xhiyhizlo = 0.1 0.0 0.0
elastic.bc.type.xhiyhizhi = disp trac trac
elastic.bc.val.xhiyhizhi = 0.1 0.0 0.0


